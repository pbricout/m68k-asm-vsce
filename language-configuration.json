{
  "comments": {
    "lineComment": ";",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],  "folding": {
    "markers": {
      "start": "^\\s*(?i:(?:;\\s*#region\\b)|(?:section\\s+[\\w.]+)|(?:macro\\b)|(?:if\\b))",
      "end": "^\\s*(?i:(?:;\\s*#endregion\\b)|(?:section)|(?:endm\\b)|(?:endif\\b))"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
